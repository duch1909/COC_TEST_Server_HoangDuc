{
    "name": "mi/core",
    "description": "Core Dependencies for Laravel v5",
    "type": "library",
    "require": {
        "illuminate/support": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Mi\\Core\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require-dev": {
    },
    "scripts": {
        "lint": [
            "./vendor/bin/phpcs src",
            "./vendor/bin/phpstan analyse --no-progress",
            "./vendor/bin/phpmd src text ./phpmd.xml"
        ]
    }
}
